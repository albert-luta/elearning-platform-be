{
	"name": "elearning-platform-be",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"prebuild": "npm run prisma:generate && shx rm -rf dist",
		"build": "nest build",
		"start": "node dist/src/main",
		"prestart:dev": "shx rm -rf dist",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prisma:generate": "shx rm -rf ./src/generated/prisma-nestjs-graphql && npx prisma generate",
		"prisma:db:update": "npx prisma db push --skip-generate && npm run prisma:generate",
		"prisma:db:reset": "npx prisma migrate reset --skip-generate && npm run prisma:generate",
		"prisma:db:migrate:prod": "npx prisma migrate deploy",
		"prisma:db:migrate:dev": "npx prisma migrate dev --skip-generate && npm run prisma:generate",
		"prisma:db:seed": "npx prisma db seed --preview-feature",
		"prisma:studio": "npx prisma studio --browser none",
		"prepare": "husky install"
	},
	"dependencies": {
		"@nestjs/common": "^7.6.13",
		"@nestjs/config": "^0.6.3",
		"@nestjs/core": "^7.6.13",
		"@nestjs/graphql": "^7.9.11",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/platform-express": "^7.6.13",
		"@nestjs/serve-static": "^2.1.4",
		"@prisma/client": "^2.23.0",
		"apollo-server-express": "^2.21.1",
		"argon2": "^0.27.1",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"cookie-parser": "^1.4.5",
		"graphql": "^15.5.0",
		"graphql-tools": "^7.0.4",
		"graphql-upload": "^11.0.0",
		"prisma-error-enum": "^0.1.1",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^6.6.6"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.5.6",
		"@nestjs/schematics": "^7.2.7",
		"@nestjs/testing": "^7.6.13",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.11",
		"@types/graphql-upload": "^8.0.4",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.31",
		"@types/supertest": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "^4.15.2",
		"@typescript-eslint/parser": "^4.15.2",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^5.2.0",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"prisma": "^2.23.0",
		"prisma-nestjs-graphql": "^11.0.3",
		"shx": "^0.3.3",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.2",
		"ts-loader": "^8.0.17",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.1.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --cache --fix",
			"bash -c tsc --noemit"
		]
	},
	"engines": {
		"node": "14.x"
	}
}
